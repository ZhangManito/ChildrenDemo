<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FAFAFA"
    android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/main_banner" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/hot_message"
            android:text="7月1日"
            android:textSize="16sp"/>
        <com.zhang.finishandroid.view.UserDefinedView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:image_header="@drawable/game_interest"
            android:layout_marginTop="5dp"
            app:is_divider_visibility="true"
            app:user_text="室内游戏"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/indoor_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"/>
        <com.zhang.finishandroid.view.UserDefinedView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:image_header="@drawable/game_outside"
            android:layout_marginTop="5dp"
            app:is_divider_visibility="true"
            app:user_text="户外游戏"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/outdoors_games"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"/>
        <com.zhang.finishandroid.view.UserDefinedView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:image_header="@drawable/main_game_goods"
            android:layout_marginTop="5dp"
            app:is_divider_visibility="true"
            app:user_text="游戏物品"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/game_objects1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/game_objects2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"/>
</LinearLayout>